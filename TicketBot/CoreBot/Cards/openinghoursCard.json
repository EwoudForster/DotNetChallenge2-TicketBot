{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Restaurant",
              "weight": "Bolder",
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "text": "Playing movies",
              "weight": "Bolder",
              "spacing": "None"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://koenvangeel.pythonanywhere.com/static/restaurant.jpg",
              "size": "Medium",
              "altText": "Restaurant Image"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Join us for a delightful culinary experience on:",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "- Monday: **closed**\n- Tuesday to Friday: 11:00 AM to 10:00 PM\n- Saturday and Sunday: 12:00 PM to 11:00 PM",
      "wrap": true
    }
  ]
}

